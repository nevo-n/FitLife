<div class="modal fade bd-example-modal-lg" id="showFriendsModel" tabindex="-1" role="dialog" aria-labelledby="showFriendsModel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="showFriendsModelLabel">Friends in group</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <% data.group.friends.forEach((user) => { %>
                <div class="mb-4">
                    <div class="justify-content-between align-items-start">
                      <div aria-label="breadcrumb">
                        <ol class="breadcrumb">
                          <li class="breadcrumb-item"><%= user.email %></li>
                          <li class="breadcrumb-item text-muted"><%= user.type %></li>
                          <li class="breadcrumb-item text-muted">
                            Follow: <%= user.following.length %>
                          </li>
                          <li class="breadcrumb-item text-muted">
                            Followers: <%= user.followers.length %> 
                          </li>
                          <li class="breadcrumb-item text-muted">
                            <a href="#" class="text-muted">watch posts</a> 
                          </li>
                        </ol>
                      </div>
                    </div>
                  </div>
                <% }); %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Dismiss</button>
        </div>
      </div>
    </div>
  </div>