
<div class="modal fade bd-example-modal-lg" id="editGroupModel" tabindex="-1" role="dialog" aria-labelledby="editGroupModel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editGroupModelLabel">Friends in group</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6 offset-md-3">    
                <h3>Edit group</h3>
                <form action="/group/edit" method="post">
                  <div class="form-group">
                      <label for="title">Name</label>
                      <input type="text" class="form-control" id="name" name="name" required value="<%=data.group.name%>">
                  </div>
                  <div class="form-group">
                    <label for="title">Tags</label>
                    <input type="text" class="form-control" id="tags" name="tags" required value="<%=data.group.tags.map(str => `#${str}`).join(' ')%>">
                    <small class="form-text text-muted">
                        Add tags by typeing '#' before each tag
                    </small>
                </div>
                  <div class="form-group">
                    <label for="content">Description</label>
                    <textarea class="form-control" id="description" rows="3" name="description"><%=data.group.description%></textarea>
                  </div>
                  <input hidden name="groupId" id="groupId" value="<%=data.group._id%>">
                  <button type="submit" class="btn btn-primary">Edit group</button>
                </form>
              </div>            
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Dismiss</button>
        </div>
      </div>
    </div>
  </div>