<div class="row">
    <div class="col-md-6 offset-md-3">
      <% if(data.message == 'edited') { %>
          <div class="alert alert-success" role="alert">
              <span>Post has been edited, wanna edit again? here is your chance!</span>
          </div>
      <% } %>
    
    <h3>Edit post</h3>
    <form action="/post/edit" method="post">
      <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" name="title" required value="<%= data.post.title %>">
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        <textarea class="form-control" id="content" rows="3" name="content"><%= data.post.content %></textarea>
      </div>
      <input type="text" id="_id" name="_id" value="<%= data.post._id %>" hidden>
      <button type="submit" class="btn btn-primary">Edit post</button>
    </form>
  </div>
  