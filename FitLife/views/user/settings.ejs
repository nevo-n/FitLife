<div class="row">
    <div class="col-md-6 offset-md-3">
        <% if(data.message == '1') { %>
            <div class="alert alert-success" role="alert">
                <span>Account updated successfuly</span>
            </div>
        <% }
        else if(data.message == '2') { %>
            <div class="alert alert-danger" role="alert">
                <span>Oops! Something went wrong</span>
            </div>
        <% } %>
         
        <h3>Edit Account</h3>
        <form action="/me/settings" method="post">
            <div class="form-group">
                <label for="fname">First Name</label>
                <input type="text" class="form-control" id="fname" name="fname" required value="<%= data.user.fname %>">
            </div>
            <div class="form-group">
                <label for="lname">Last Name</label>
                <input type="text" class="form-control" id="lname" name="lname" required value="<%= data.user.lname %>">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required value="<%= data.user.email %>" disabled>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" required value="<%= data.user.password %>">
            </div>
            <div class="form-group">
                <label for="date-of-birth">Date of Birth</label>
                <input type="date" class="form-control" id="date-of-birth" name="date_of_birth" required value="<%= new Date(data.user.date_of_birth).toISOString().split('T')[0] %>">
            </div>
            <div class="form-group">
                <label for="type">Type</label>
                <select class="form-control" id="type" name="type" required>
                    <option "<% if(data.user.type == 'Coach') {%> selected <%} %>" value="Coach">Coach</option>
                    <option "<% if(data.user.type == 'Trainee') {%> selected <%} %>" value="Trainee">Trainee</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>